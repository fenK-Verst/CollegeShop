{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper">
        {% if  products %}
        <a href="/cart/clear" class="float-right">Очистить корзину</a>
        <table class="table table-bordered  cart mt-2">
            <tr>
                <th>№</th>
                <th>Товар</th>
                <th>Количество</th>
                <th>Цена</th>
                <th></th>
            </tr>
            {% for product in products %}
                <td>{{ loop.index }}</td>
                <td>
                    <div class="d-flex align-items-center">
                        <img src="{{ product.image.path|default("/assets/design/images/no-photo.svg") }}" width="30" height="30" alt="">{{ product.name }}
                    </div>
                </td>
                <td>{{ cart[product.id].count }}</td>
                <td>{{ cart[product.id].count*product.price }}</td>
                <td class="d-flex justify-content-center align-items-center"><a href="/cart/{{ product.id }}/delete"><i class="fa fa-minus"></i></a></td>
            {% endfor %}
        </table>
            {% if app.user %}
                <div><a class="btn btn-danger" href="/orders/add">Оформить заказ</a></div>
            {% else %}
                <div><a href="/register">Зарегистрируйтесь</a> или <a href="/login">войдите</a> чтобы
                    оформить заказ
                </div>
            {% endif %}
        {% else %}
            Корзина пуста. <a href="/product">За покупками</a>
        {% endif %}
    </div>
{% endblock %}