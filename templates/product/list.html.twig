                            <!--                                    <td >Обжарка</td>-->
                            <!--                                    <td class="value">Средняя</td>-->
                            <!--                                </tr>-->
                            <!--                                <tr class="param">-->
                            <!--                                    <td >Особенности вкуса</td>-->
                            <!--                                    <td class="value">Кислинка</td>-->
                            <!--                                </tr>-->
                            <!--                            </table>-->
                            <!--                        </div>-->
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{% block styles %}
    <link rel="stylesheet" href="/assets/design/css/product_list.css">
{% endblock %}