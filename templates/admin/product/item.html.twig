{% extends "admin/base.html.twig" %}
{% block title %}{{product.name}}{% endblock %}
{% block title_small %}{{product.article}}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">{{product.name}}</h3>
                    <div class="box-tools">
                        <a href="/admin/product/{{ product.id }}/edit">
                        <div class="btn btn-xs btn-success">
                            <i class="fa fa-edit"></i>
                        </div>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                   <div class="product">
                       <div class="image">
                           {% if product.image %}
                               <img src="{{ product.image.path }}" width="300px" alt="">
                           {% else %}
                               <img src="/assets/design/images/no-photo.svg" class="d-block" width="300px    " alt="">
                           {% endif %}
                       </div>
                       <div>
                           Название: <span>{{ product.name }}</span>
                       </div>
                       <div>
                           Артикул: <span>{{ product.article }}</span>
                       </div>
                       <div>
                           Производитель: <span>{{ product.vendor.name }}</span>
                       </div>
                       <div>
                           Категории:
                           <ul>
                               {% for folder in product.folders %}
                                    <li>{{ folder.name }}</li>
                               {% endfor %}
                           </ul>
                       </div>
                       <div>
                           Цена: <span>{{ product.price }}</span>
                       </div>
                       <div>
                           Количество: <span class="text-bold">{{ product.count }}</span>
                       </div>
                       <div>
                           Описание: <div class="m-2">{{ product.description }}</div>
                       </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}