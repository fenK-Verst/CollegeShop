{% extends "admin/base.html.twig" %}
{% block title %}Категория{% endblock %}
{% block title_small %}Добавление{% endblock %}
{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">

                <div class="box-tools">

                </div>
            </div>
            <div class="box-body">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error|nl2br }}
                    </div>
                {% endif %}
                <form method="post" class="form">
                    <div class="form-group">
                        <label for="folder[name]">Название Категории</label>
                        <input type="text" class="form-control" name="folder[name]" value="{{ folder.name }}"
                               required
                               id="folder[name]">
                    </div>
                    <button class="btn btn-danger"> {% if folder.id %}Изменить{% else %}Добавить{% endif %}</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}