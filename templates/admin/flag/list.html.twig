{% extends "admin/base.html.twig" %}
{% block title %}Флаги{% endblock %}
{% block title_small %}Список{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Флаги</h3>
                    <div class="box-tools">
                        <a href="/admin/flag/create">
                        <div class="btn btn-sm btn-success">
                            <i class="fa fa-plus"></i>
                        </div>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-stripped ">
                        <tr>
                            <th>Имя</th>
                            <th></th>
                        </tr>
                    {% for flag in flags %}
                       <tr>
                           <td>{{ flag.name }}</td>
                           <td class="text-right">
                              <div class="btn-group align-items-start">
                                  <a href="/admin/flag/{{ flag.id }}/edit" class="btn btn-xs btn-primary">
                                      <i class="fa fa-edit"></i>
                                  </a>
                                  <form action="/admin/flag/delete" method="post" class="btn btn-xs btn-danger" style="display: inline">
                                      <input type="hidden" value="{{ flag.id }}" name="flag_id">
                                      <button style="padding: 0;margin: 0;background: none; border: none"><i class="fa fa-remove"></i></button>
                                  </form>
                              </div>
                           </td>
                       </tr>
                    {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}