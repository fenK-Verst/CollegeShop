{% extends "admin/base.html.twig" %}
{% block title %}Флаг{% endblock %}
{% block title_small %}Добавление{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <div class="box-tools">
                    </div>
                </div>
                <div class="box-body">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error|nl2br }}
                        </div>
                    {% endif %}
                    <form method="post" class="form">
                        <div class="form-group">
                            <label for="flag[name]">Название флага</label>
                            <input type="text" class="form-control" name="flag[name]" value="{{ flag.name }}" required id="flag[name]">
                        </div>

                        <button class="btn btn-danger"> {% if flag.id %}Изменить{% else %}Добавить{% endif %}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}