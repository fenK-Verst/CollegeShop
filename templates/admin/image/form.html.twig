{% extends "admin/base.html.twig" %}
{% block title %}Фотография{% endblock %}
{% block title_small %}Добавление{% endblock %}
{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">

                <div class="box-tools">

                </div>
            </div>
            <div class="box-body">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error|nl2br }}
                    </div>
                {% endif %}
                <form method="post" class="form" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="image[alias]">Название Фотографии</label>
                        <input type="text" class="form-control" name="image[alias]" value="{{ image.alias }}"
                               required
                               id="image[alias]">
                    </div>
                    <div class="form-group">
                        <label for="image[path]">Фотография</label>
                        <input type="file" class="form-control-file" name="image[path]" value="{{ image.path }}"
                               required
                               id="image[path]">
                    </div>
                    <button class="btn btn-danger"> {% if image.id %}Изменить{% else %}Добавить{% endif %}</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}